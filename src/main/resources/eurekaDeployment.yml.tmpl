apiVersion: apps/v1
kind: Deployment
metadata:
 name: eureka-server
 labels:
   app: eureka-server
spec:
 replicas: 2
 selector:
   matchLabels:
     app: eureka-server
 template:
   metadata:
     labels:
       app: eureka-server
   spec:
     hostname: eureka
     containers:
     - name: discovery
       image: AZ_EUREKA_IMG
       ports:
       - containerPort: 8761
     imagePullSecrets:
     - name: azcreds

---
kind: Service
apiVersion: v1
metadata:
 name: eureka
spec:
 selector:
   app: eureka-server
 ports:
 - protocol: TCP
   port: 8761
   targetPort: 8761